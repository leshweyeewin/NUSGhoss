<div class="page-header">
  <h1>
    <% if User.find_by_profile_name(@tag.name) %>
      <%= "@"+@tag.name %>
    <% end %>
  </h1>  
</div>
<% @statuses.each do |status| %>
  <div class="status">
    <p><%= link_to status.content, status %></p>
    <div class = "tag">
      <% status.tags.each do |tag| %>
        <% if User.find_by_profile_name(tag.name) %>
          <%= link_to "@"+tag.name, tagged_url(:tag => tag.name) %>
        <% end %>
      <% end %>
    </div>
    <div class="meta">
      <%= time_ago_in_words(status.created_at) + " ago " %> 
      <!--
      <% if status.user == current_user %> 
        <span class="admin">
          <%= "|" %>
          <%= link_to "Edit", edit_status_path(status) %>
          <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this?"} %>
        </span>
      <% end %> -->
    </div>
  </div>
<% end %> 
<div class="round-button">
  <div class="round-button-circle">
    <%= link_to "New Status", new_status_path, class:"roundbutton create", id:"create-button" %>  
  </div>
</div>



