<h1></h1>
<div class = "tag">
  <% if @status.tags.any? %>
  <p>
    <strong>Tags:</strong>
    <% @status.tags.each do |tag| %>
      <% if User.search(tag.name) %>
        <%= link_to "@"+tag.name, tagged_url(:tag => tag.name) %>
      <% end %>
      <% if Facility.find_by_name(tag.name) %>
        <%= link_to "#"+tag.name, tagged_url(:tag => tag.name) %>
      <% end %>
    <% end %>
  </p>
  <% end %>
</div>
<p>
  <strong>Content:</strong>
  <%= @status.content %>
</p>
<p>
  <strong>Created at:</strong>
  <%= @status.created_at.strftime("%b %d %Y %r") %>
</p>
<p>
  <strong>Updated at:</strong>
  <%= @status.updated_at.strftime("%b %d %Y %r") %>
</p>
<% if @status.user == current_user %> 
	<%= link_to 'Edit', edit_status_path(@status) %> | <%= link_to "Delete", @status, method: :delete, data: { confirm: "Are you sure you want to delete this?"} %> | 
<% end %>
<%= link_to 'Back', statuses_path %>
<div class="comment">
	<p></p><p><strong><%= @status.user_comments.count %> comment(s)</strong></p>
	<%= render :partial => 'comment', :collection => @status.user_comments.order("created_at DESC") %>
	<% if user_signed_in? %>
	  <h3>Add a Comment</h3>
	  <br />
	  <%= simple_form_for @user_comment do |f| %>
	    <%= f.hidden_field :status_id %>
	    <%= f.hidden_field :user_id %>
	    <div class="field"><%= f.input :content %><br></div>
  		<div class="form-actions">
    		<%= f.button :submit %>
  		</div>
	    <br />
	  <% end %>
	<% end %>
</div>