<h1></h1>
<p>
  <strong>Content:</strong>
  <%= @status.content %>
</p>
<% if @status.user == current_user %> 
	<%= link_to 'Edit', edit_status_path(@status) %> | <%= link_to "Delete", @status, method: :delete, data: { confirm: "Are you sure you want to delete this?"} %> | 
<% end %>
<%= link_to 'Back', statuses_path %>
<div class="comment">
	<p>
	  <%= @status.user_comments.count %> comment(s)
	</p>
	<% if user_signed_in? %>
	  <h3>Add a Comment</h3>
	  <br />
	  <%= form_for @user_comment do |f| %>
	    <%= f.hidden_field :status_id %>
	    <%= f.hidden_field :user_id %>
	    <p>
	      <%= f.text_area :content %>
	    </p>
	    <br />
	    <p>
	      <%= f.submit "Post Comment" %>
	    </p>
	    <br />
	  <% end %>
	<% end %>
	<%= render :partial => 'comment', :collection => @status.user_comments %>
</div>